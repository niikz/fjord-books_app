<h2><%= Comment.model_name.human %></h2>

<% if commentable.comments.blank? %>
  <p><%= t('comment.submit.not_yet', name: Comment.model_name.human) %></p>
<% end %>
<% commentable.comments.each do |comment| %>
  <div>
    <% user = User.find(comment.user_id) %>
    <% user_info = user.name.blank? ? user.email : user.name %>
    <p><%= user_info %></p>
    <p><%= comment.text %></p>
    <p><%= l comment.created_at %></p>
  </div>
<% end %>
